<%- include('header') -%>
<div class="container">
    <div class="jumbotron">
      <h1>Add product</h1>
    </div>
</div>
<div class="container">

  <div class="list-group">
      <% supplier.forEach(function(item) { %>

          <ul class="list-group">
              <li class="list-group-item clearfix">
                  <h4 class="list-group-item-heading"><%= item['supplier_name']%></h4>
                  <p class="list-group-item-text">
                      <%= item["supplier_contact"] %>
                  </p>

              </li>
          </ul>

          <% }); %>

  </div>


  <form action="/add_product" method="post" accept-charset="utf-8">
    <div class="form-group">
      <label for="product_name">Product name:</label>
      <input type="text" class="form-control" id="product_name" name="product_name">
    </div>
    <div class="form-group">
      <label for="product_price">Product price per unit (Â£):</label>
      <input type="text" class="form-control" id="product_price" name="product_price">
      <input type="hidden" id="supplier_id" name="supplier_id" value= <%= supplier[0]['_id'] %> >
    </div>
    <button type="submit" value = "Submit" class="btn btn-default">Submit</button>
  </form>

</div>
</body>
